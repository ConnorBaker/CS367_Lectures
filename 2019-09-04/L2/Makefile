#-----------------------------------------------------------------------------
# Generic Makefile
#-----------------------------------------------------------------------------

#-----------------------------------------------------------------------------
# Set Compiler and Flags
#--------------------------------------------------------------------------
CC   = gcc
OPTS = -O0 -std=c99 -Wall
DEBUG = -g

#--------------------------------------------------------------------
# Set up the Flags
#--------------------------------------------------------------------
CFLAGS   = $(OPTS) $(DEBUG)

#--------------------------------------------------------------------
# Set up the targets and prepare the compiling options
#--------------------------------------------------------------------
TARGETS= int_endian show_bytes logic bitwise question4 mask
all: $(TARGETS)

%: %.c 
	${CC} ${CFLAGS} $< -o $@ 

#--------------------------------------------------------------------
# Cleans objects and executables
#--------------------------------------------------------------------
clean:
	rm -f $(TARGETS)

