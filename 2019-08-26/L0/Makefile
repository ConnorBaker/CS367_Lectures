#-----------------------------------------------------------------------------
# Generic Makefile
#-----------------------------------------------------------------------------

#-----------------------------------------------------------------------------
# Set Compiler and Flags
#--------------------------------------------------------------------------
CC   = gcc
OPTS = -O0
DEBUG = -pg -g

#--------------------------------------------------------------------
# Set up the Flags
#--------------------------------------------------------------------
CFLAGS   = $(OPTS) $(DEBUG)

#--------------------------------------------------------------------
# Set up the targets and prepare the compiling options
#--------------------------------------------------------------------
TARGETS=int_of fp_of compiler_a compiler_b mem_bug \
array_access int_index fp_index_a fp_index_b
all: $(TARGETS)

%: %.c 
	${CC} ${CFLAGS} $< -o $@ 

#--------------------------------------------------------------------
# Cleans objects and executables
#--------------------------------------------------------------------
clean:
	rm -f $(TARGETS)

