#-----------------------------------------------------------------------------
# Generic Makefile
#-----------------------------------------------------------------------------

#-----------------------------------------------------------------------------
# Set Compiler and Flags
#--------------------------------------------------------------------------
CC   = gcc
OPTS = -O0
DEBUG = -g

#--------------------------------------------------------------------
# Set up the Flags
#--------------------------------------------------------------------
CFLAGS   = $(OPTS) $(DEBUG)

#--------------------------------------------------------------------
# Set up the targets and prepare the compiling options
#--------------------------------------------------------------------
TARGETS=ptr_1 ptr_2 ptr_3 ary_a print scan struct_a ll ptr_ary
all: $(TARGETS)

%: %.c 
	${CC} ${CFLAGS} $< -o $@ 

#--------------------------------------------------------------------
# Cleans objects and executables
#--------------------------------------------------------------------
clean:
	rm -f $(TARGETS)

